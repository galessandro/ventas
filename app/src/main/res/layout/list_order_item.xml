<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/orderItemListLayout">

    <TextView
        android:layout_width="0dip"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextItemList"
        android:textStyle="bold"
        android:id="@+id/order_item_product_cod"/>

    <TextView
        android:layout_width="0dip"
        android:layout_weight="5"
        android:textColor="@color/colorTextItemList"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:id="@+id/order_item_name"/>

    <EditText
        android:layout_width="0dip"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextItemList"
        android:inputType="number"
        android:singleLine="true"
        android:id="@+id/order_item_quantity"/>

    <TextView
        android:layout_width="0dip"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:textColor="@color/colorTextItemList"
        android:singleLine="true"
        android:id="@+id/order_item_price"/>

    <ImageButton
        android:layout_width="0dip"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:id="@+id/order_item_btn_remove"
        android:src="@mipmap/ic_menu_delete" />

</LinearLayout>