<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sandro.venta">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.ListOrdersActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.ClientsActivity" />
        <activity
            android:name=".activity.NewOrderActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name=".activity.CloseSaleActivity" />
        <activity android:name=".activity.NewClientActivity" />
        <activity android:name=".activity.ViewClientActivity" />
        <activity android:name=".activity.ProductsActivity" />
        <activity android:name=".activity.AddProductActivity" />
        <activity android:name=".activity.SelectClientActivity"></activity>
    </application>

</manifest>
